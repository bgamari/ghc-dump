executable ghc-dump
  main-is:             Main.hs
  build-depends:       base < 5.0,
                       ghc-dump-core >=0.1 && <0.2,
                       ghc-dump-util,
                       ansi-wl-pprint >= 0.6,
                       regex-tdfa >= 1.2,
                       regex-tdfa-text,
                       optparse-applicative >= 0.13,
                       text >= 1.0
  default-language:    Haskell2010
