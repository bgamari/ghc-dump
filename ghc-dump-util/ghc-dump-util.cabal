                       ghc-dump-core >=0.1 && <0.2,
                       bytestring >=0.10 && <0.11,
                       unordered-containers >= 0.2,
                       hashable >= 1.2,
                       text >= 1.0,
                       ansi-wl-pprint >= 0.6,
                       binary-serialise-cbor >=0.1 && <0.2
